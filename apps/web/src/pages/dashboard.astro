---
// Protected Dashboard Page
const { isAuthenticated, user } = Astro.locals;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - AI Starter Template</title>
  <meta name="robots" content="noindex, nofollow" />
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- Navigation Header -->
  <nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center">
          <a href="/" class="text-2xl font-bold text-blue-600">
            AI Starter
          </a>
        </div>
        <div class="flex items-center space-x-4">
          <a 
            href="/profile"
            class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
          >
            Profile
          </a>
          <a 
            href="/settings"
            class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
          >
            Settings
          </a>
          <a 
            href="/sign-in"
            class="bg-red-600 text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-red-700"
          >
            Sign Out
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
      <p class="text-gray-600 mt-2">
        Welcome back{user?.name ? `, ${user.name}` : ''}! Here's your activity overview.
      </p>
    </div>

    <!-- Authentication Status -->
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-8">
      <h2 class="text-lg font-semibold text-green-800 mb-2">âœ… Authentication Status</h2>
      <p class="text-green-700">You are successfully authenticated and accessing a protected page!</p>
      {user && (
        <div class="mt-3 text-sm text-green-600">
          <p><strong>User ID:</strong> {user.id}</p>
          <p><strong>Name:</strong> {user.name}</p>
          {user.email && <p><strong>Email:</strong> {user.email}</p>}
        </div>
      )}
    </div>

    <!-- Dashboard Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Quick Stats -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">ğŸ“Š Quick Stats</h2>
        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Total Conversations:</span>
            <span class="text-2xl font-bold text-blue-600">0</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Messages Sent:</span>
            <span class="text-2xl font-bold text-green-600">0</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Time Active:</span>
            <span class="text-2xl font-bold text-purple-600">0h</span>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">ğŸ•’ Recent Activity</h2>
        <div class="space-y-3">
          <div class="text-center py-8 text-gray-500">
            <p class="text-sm">No recent activity</p>
            <p class="text-xs mt-1">Start a conversation to see your activity here</p>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">âš¡ Quick Actions</h2>
        <div class="space-y-3">
          <a 
            href="/chat"
            class="block w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 text-center transition-colors"
          >
            ğŸ’¬ Start New Chat
          </a>
          <a 
            href="/profile"
            class="block w-full bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 text-center transition-colors"
          >
            ğŸ‘¤ View Profile
          </a>
          <a 
            href="/settings"
            class="block w-full bg-purple-600 text-white px-4 py-2 rounded-md hover:bg-purple-700 text-center transition-colors"
          >
            âš™ï¸ Settings
          </a>
        </div>
      </div>
    </div>

    <!-- Feature Cards -->
    <div class="mt-12 grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- AI Chat Feature -->
      <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-lg p-6 border border-blue-200">
        <h3 class="text-2xl font-bold text-blue-800 mb-3">ğŸ¤– AI Chat Assistant</h3>
        <p class="text-blue-700 mb-4">
          Start conversations with AI to get help with coding, writing, analysis, and more.
        </p>
        <a 
          href="/chat"
          class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
        >
          Start Chatting â†’
        </a>
      </div>

      <!-- Code Generation Feature -->
      <div class="bg-gradient-to-br from-green-50 to-emerald-100 rounded-lg p-6 border border-green-200">
        <h3 class="text-2xl font-bold text-green-800 mb-3">ğŸ’» Code Generation</h3>
        <p class="text-green-700 mb-4">
          Generate, review, and refactor code with AI assistance across multiple programming languages.
        </p>
        <button 
          class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors"
          disabled
        >
          Coming Soon
        </button>
      </div>
    </div>
  </main>
</body>
</html>